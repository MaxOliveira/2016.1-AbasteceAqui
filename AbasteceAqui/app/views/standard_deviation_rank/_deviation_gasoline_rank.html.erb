<table id ="deviation-rank-by-gasoline">
<h2>Rank Preços Gasolina</h2>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Municipio</th>
      <th>Estado</th>
      <th>Preço médio</th>
    </tr>
  </thead>
  <tbody>
    <% for i in 0..(@counties_sorted_gasoline.length-1)%>
    <tr>
      <% if(i == 0) %>
      <td><%= image_tag("gold.png", :alt => "rank")%> <%= i+1 %></td>
      <%end%>
      <% if(i == 1) %>
      <td><%= image_tag("silver.png", :alt => "rank")%> <%= i+1 %></td>
      <% end %>
      <% if(i == 2) %>
      <td><%= image_tag("bronze.png", :alt => "rank")%> <%= i+1 %></td>
      <%end%>
      <% if(i > 2) %>
      <td><%= image_tag("honor_medal.png", :alt => "rank")%> <%= i+1 %></td>
      <%end%>
      <td><%= @counties_sorted_gasoline[i].name.titleize %></td>
      <td><%= @counties_sorted_gasoline[i].state.name.titleize %></td>
      <td><%= @gasoline_sorted[i].distribuition_standard_deviation %></td>
    </tr>
    <% end %>

  </tbody>
</table>


<script>
$(document).ready(function() {

    $('#deviation-rank-by-gasoline').DataTable( {
        "bSort": false,
        "language": {
          url: "//cdn.datatables.net/plug-ins/1.10.11/i18n/Portuguese-Brasil.json"
        }
    });
});
</script>